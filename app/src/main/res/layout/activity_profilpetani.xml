<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bck"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable1"
    tools:context=".profilpetani">

    <ImageView
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:layout_marginTop="292dp"
        android:background="@drawable/custom_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginBottom="436dp"
        android:scaleType="centerCrop"
        android:src="@drawable/custom_frame2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ptofil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logoprofil"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

    <TextView
        android:id="@+id/Tangoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Nama Pengguna"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ptofil"
        app:layout_constraintStart_toStartOf="@+id/ptofil"
        app:layout_constraintTop_toTopOf="@+id/ptofil" />

    <ImageButton
        android:id="@+id/tmblkmbli"
        android:layout_width="53dp"
        android:layout_height="48dp"
        android:contentDescription="Tombol Kembali"
        android:src="@drawable/iconback"
        app:layout_constraintBottom_toBottomOf="@+id/ptofil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108" />

    <TextView
        android:id="@+id/userrr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/Tangoi"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/Tangoi"
        app:layout_constraintTop_toBottomOf="@+id/Tangoi"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="520dp"
        android:background="@drawable/custom_frame"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userrr"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30sp"
            android:text="Alamat"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/iptalamat"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:hint="Input Alamat"
            android:paddingLeft="7dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            android:textSize="19dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:text="Telepon"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/iptnomor"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:hint="Input Telepon"
            android:paddingLeft="7dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            android:textSize="19dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:text="Jenis Kelamin"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/iptJK"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:hint="Input Gender"
            android:paddingLeft="7dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            android:textSize="19dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:text="Luas Lahan (m)"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/iptluas"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:hint="Input luas lahan"
            android:paddingLeft="7dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            android:textSize="19dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:text="Tinggi lahan"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inptinggilhn"
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:hint="Tinggi lahan"
            android:paddingLeft="7dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textColorLink="@color/white"
            android:textSize="19dp" />

        <Button
            android:id="@+id/btnedit"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="5sp"
            android:text="+Edit" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>