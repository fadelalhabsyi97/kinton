<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable1">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginBottom="436dp"
        android:scaleType="centerCrop"
        android:src="@drawable/custom_frame2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logoprofil"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

    <TextView
        android:id="@+id/Tangoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Nama Pengguna"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="53dp"
        android:layout_height="48dp"
        android:src="@drawable/iconback"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108"
        android:contentDescription="Tombol Kembali"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/Tangoi"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/Tangoi"
        app:layout_constraintTop_toBottomOf="@+id/Tangoi"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="520dp"
        android:background="@drawable/custom_frame"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30sp"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:hint="Input Alamat"
            android:paddingLeft="7dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="19dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:hint="Input Nomor"
            android:paddingLeft="7dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="19dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"/>

        <RadioGroup
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginStart="50dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Laki-laki"
                android:textColor="@color/white"
                android:textColorHint="#FFFFFF"
                android:textStyle="bold" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perempuan"
                android:layout_marginLeft="20sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textStyle="bold"/>

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luas Lahan (Ha)"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:hint="Input luas lahan"
            android:paddingLeft="7dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:textSize="19dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ketinggian lahan"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:hint="Ketinggian luas lahan"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:paddingLeft="7dp"
            android:textColorHint="@color/white"
            android:textSize="19dp" />

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="+Edit"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5sp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="50dp"
                android:text="Save"/>

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>